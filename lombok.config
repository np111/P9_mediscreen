# this is root dir: don't search for parent
config.stopBubbling = true

# add @Generated to Lombok code (so Jacoco will ignore Lombok generated code in reports)
lombok.addLombokGeneratedAnnotation = true

# add @java.beans.ConstructorProperties when generating constructors (so that Jackson uses them)
# NOTE: need to depend on 'java.desktop' (see https://projectlombok.org/features/configuration)
lombok.anyConstructor.addConstructorProperties = true

lombok.log.fieldName = logger
